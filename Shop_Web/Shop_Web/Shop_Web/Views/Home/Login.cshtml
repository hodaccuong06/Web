@model Shop_Web.Database.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
<div class="card mx-auto" style="max-width:540px; margin-top:100px;">
    <article class="card-body">
        <header class="card-header"><h4 class="card-title">Login</h4></header>

                    <div class="card-body">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email)
                            
                                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                
                                    <input type="submit" name="submit" class="btn btn-primary btn-block" value="Login" />
                                </div>
                            
                                }
                            </div>
    </article>
</div>
<div>
    <div class="text-center mt-4 ">You don't have an account yet? <a href="~/Home/Register" class="text-primary">Register</a> </div>
    <br><br>
</div>
<br>
